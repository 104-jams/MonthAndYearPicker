<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:monthPickerDialog="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    tools:context="com.whiteelephant.monthpicker.MainActivity">

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

<!--    <com.example.prem.firstpitch.MyMonthView
        android:id="@+id/monthView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />-->

    <com.whiteelephant.monthpicker.YearPickerView
        android:id="@+id/yearView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/month_picker"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Month Picker"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/date_picker"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="DatePicker"
            android:textColor="#fff"
            />


    </LinearLayout>


    <!--<com.example.prem.firstpitch.MonthPickerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->

    <com.whiteelephant.monthpicker.MonthPickerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/TestView"
        />
</RelativeLayout>
